<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackGround"
    android:orientation="vertical"
    tools:context=".Fragment_main">

    <ImageView
        android:id="@+id/weatherPNG"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/how"
        app:layout_constraintBottom_toTopOf="@+id/dddd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragcity"
        app:layout_constraintVertical_bias="0.567" />

    <TextView
        android:id="@+id/textView5"
        style="@style/StringsTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Влажность"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ddd" />

    <TextView
        android:id="@+id/textView6"
        style="@style/StringsTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="В данный момент"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
    <TextView
        android:id="@+id/textView9"
        style="@style/StringsTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="П"
        app:layout_constraintStart_toEndOf="@+id/davl"
        app:layout_constraintTop_toBottomOf="@+id/pain" />
    <TextView
        android:id="@+id/textView10"
        style="@style/StringsTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        app:layout_constraintStart_toEndOf="@+id/vlag"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView7"
        style="@style/StringsTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Давление"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/pain"
        style="@style/StringsTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="погода"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/vlag" />

    <TextView
        android:id="@+id/vlag"
        style="@style/StringsTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="влажность"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/temp" />

    <TextView
        android:id="@+id/davl"
        style="@style/StringsTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="давление"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView"
        style="@style/marginTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ваш город:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragcity"
        style="@style/marginTop"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Город не выбран"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/temp"
        style="@style/StringsTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="6"
        android:text="градусов"
        app:layout_constraintStart_toEndOf="@+id/ddd"
        app:layout_constraintTop_toBottomOf="@+id/dddd" />


    <TextView
        android:id="@+id/felstemp"
        style="@style/StringsTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="6"
        android:text="градусов"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/dddd" />

    <TextView
        android:id="@+id/textView3"
        style="@style/StringsTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="℃"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/temp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.376" />

    <TextView
        android:id="@+id/textView4"
        style="@style/StringsTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="℃"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/felstemp" />

    <TextView
        android:id="@+id/dddd"
        style="@style/StringsTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ощущается как"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ddd"
        style="@style/StringsTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Температура"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dddd" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Улыбайтесь чаще"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/clouds"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/anim_loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Sovet"
        style="@style/StringsTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_dis"
        android:text=" совет на халяву"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/davl"
        android:gravity="center_horizontal" />
</androidx.constraintlayout.widget.ConstraintLayout>
